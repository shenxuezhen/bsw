/* pages/post/post.wxss */
.postList{
  padding: 30rpx;
}
.title {
  padding: 10rpx 0 50rpx 0;
  text-align: center;
  font-size: 38rpx;
  font-weight: bold;
  letter-spacing:10rpx;
}

.searchMoudle{
  position: relative;
  padding-left: 48rpx;
  width: 640rpx;
  height: 60rpx;
  border: 1rpx solid #A0A0A0;
  border-radius: 30rpx;
}
.searchMoudle input{
  width: 100%;
  height: 100%;
}
.searchMoudle image{
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 33rpx;
  height: 33rpx;
}
.list text{
  display: inline-block;
  margin-top: 30rpx;
  padding: 10rpx;
  width: 670rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: 1rpx solid #A0A0A0;
  border-radius: 10rpx;
}